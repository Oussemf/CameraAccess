<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"    
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
             xmlns:local="clr-namespace:CameraAccess"    
             x:Class="CameraAccess.MainPage"    
             Title="Camera Access"    
             BackgroundColor="Gray">
    <ScrollView>
        <StackLayout>
            <Label Text="Using camera in Xamarin"/>
            <Button Text="Capture photo"    
                    x:Name="takePhoto"    />
            <Button Text="Pick picture in gallery"    
                    x:Name="pickPhoto"    />
            <Button Text="Capture video"    
                    x:Name="takeVideo"    />
            <Button Text="Pick video in gallery"    
                    x:Name="pickVideo"    />
            <Image x:Name="image"/>
        </StackLayout>
    </ScrollView>

</ContentPage>    
